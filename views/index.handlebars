<div class="container text-center">
    <h1>Eat-Da-Vegan-Burger</h1>
</div>

<hr/>

<div class="container">
    <div class="row">
        <div class="col col-md-6">
            <h2 class="text-center">Available burgers</h2>

            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li>
                            {{burger_name}}
                            <button class="btn btn-sm btn-success devour" data-id="{{this.id}}">Devour</button>
                        </li>
                    {{/unless}} 
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <h2 class="text-center">Devoured burgers</h2>

            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>
                            {{burger_name}}
                        </li>
                    {{/if}} 
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<hr/>

<div class="container text-center">
    <h2>Add New Burger</h2>
    <form>
        <div class="form-group">
            <input type="text" class="form-control col-md-6 offset-md-3 burger-name" name="newBurger">
        </div>
        <button type="submit" class="btn btn-primary add-burger">Add</button>
    </form>

    <div class="container">
        <a href="/customers"><span style="color: white;">Go to Customers List</span></a>
    </div>
</div>