<div class="container text-center">
    <h1>Eat-Da-Vegan-Burger</h1>
</div>

<hr/>

<div class="container">
    <div class="row">
        <div class="col col-md-6">
            <h2 class="text-center">Current customers</h2>

            <ul>
                {{#each customers}}
                    <li>
                        {{customer_name}}
                        <button class="btn btn-sm btn-danger remove" data-id="{{this.id}}">Remove</button>
                    </li>
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <h2 class="text-center">Who ate what</h2>

            <ul>
                {{#each customers}}
                    {{#if devoured}}
                        <li>
                            {{burger_name}}
                        </li>
                    {{/if}} 
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<hr/>

<div class="container text-center">
    <h2>Add New Customer</h2>
    <form>
        <div class="form-group">
            <input type="text" class="form-control col-md-6 offset-md-3 customer-name" name="newCustomer">
        </div>
        <button type="submit" class="btn btn-primary add-customer">Add</button>
    </form>

    <div class="container">
        <a href="/"><span style="color: white;">Go to Burgers List</span></a>
    </div>
</div>